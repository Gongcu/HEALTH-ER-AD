<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="wrap_content" xmlns:card_cview="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:id="@+id/linearLayout">
    <androidx.cardview.widget.CardView
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:id="@+id/cardview"
            card_cview:cardCornerRadius="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/linearItem"
                  android:background="@color/colorWhite"
    >
    <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/partImageView" android:layout_centerVertical="true"
            android:src="@drawable/one"/>
    <TextView
        app:fontFamily="@font/mapo_peace"
        android:background="@color/colorWhite"
            android:textColor="@color/colorMain"
            android:text="TextView" android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:id="@+id/partTextView"
            android:textSize="18dp" android:gravity="center_vertical" android:textStyle="bold"
    />
    </LinearLayout>
   </androidx.cardview.widget.CardView>

</LinearLayout>