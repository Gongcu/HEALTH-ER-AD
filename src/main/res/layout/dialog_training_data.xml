<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:paddingLeft="16dp"
        android:text="운동 정보 입력"
        android:textColor="@color/colorMain"
        android:textSize="22dp"
        android:textStyle="bold"
        app:fontFamily="@font/mapo_peace" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView10"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:text="부위"
            android:textSize="18dp"
            android:textStyle="bold"
            app:fontFamily="@font/mapo_peace" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView13"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:text="운동"
            android:textSize="18dp"
            android:textStyle="bold"
            app:fontFamily="@font/mapo_peace" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/directEditText"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10"
            android:hint="운동명을 입력하세요"
            android:paddingVertical="5dp"
            android:textColor="@color/colorMain"
            android:textSize="15dp"
            app:fontFamily="@font/mapo_peace" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView11"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:text="세트"
            android:textSize="18dp"
            android:textStyle="bold"
            app:fontFamily="@font/mapo_peace" />

        <EditText
            android:id="@+id/setEditText"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10"
            android:hint="세트 수를 입력하세요"
            android:inputType="textPersonName"
            android:paddingLeft="8dp"
            android:textSize="14dp"
            app:fontFamily="@font/mapo_peace" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView14"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:text="횟수"
            android:textSize="18dp"
            android:textStyle="bold"
            app:fontFamily="@font/mapo_peace" />

        <EditText
            android:id="@+id/repEditText"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10"
            android:hint="반복 횟수를 입력하세요"
            android:paddingLeft="8dp"
            android:textSize="14dp"
            app:fontFamily="@font/mapo_peace" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView18"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:text="무게"
            android:textSize="18dp"
            android:textStyle="bold"
            app:fontFamily="@font/mapo_peace" />

        <EditText
            android:id="@+id/weightEditText"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10"
            android:hint="중량을 입력하세요"
            android:inputType="numberDecimal"
            android:paddingLeft="8dp"
            android:textSize="14dp"
            app:fontFamily="@font/mapo_peace" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/saveBtn"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:foreground="?attr/selectableItemBackground"
            android:text="저장"
            android:textColor="@color/colorMain"
            android:textSize="20dp"
            android:textStyle="bold"
            app:fontFamily="@font/mapo_peace" />

        <Button
            android:id="@+id/quitBtn"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:foreground="?attr/selectableItemBackground"
            android:text="취소"
            android:textColor="@color/colorSub"
            android:textSize="20dp"
            android:textStyle="bold"
            app:fontFamily="@font/mapo_peace" />
    </LinearLayout>
</LinearLayout>