<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="guide"
            type="com.health.myapplication.model.GuideItem" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            android:text="@{guide.title}"
            android:hint="랫풀다운은 이렇게 해라."
            android:textSize="18dp"
            android:textColor="@color/colorBlack">
        </TextView>

        <TextView
            android:id="@+id/datetime_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/title_text_view"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@{guide.datetime}"
            android:hint="2020.11.23">
        </TextView>

        <TextView
            android:id="@+id/guide1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@+id/title_text_view"
            app:layout_constraintLeft_toRightOf="@+id/datetime_text_view"
            android:text="|">
        </TextView>

        <TextView
            android:id="@+id/view_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@+id/title_text_view"
            app:layout_constraintLeft_toRightOf="@+id/guide1"
            android:text="조회">
        </TextView>

        <TextView
            android:id="@+id/view_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@+id/title_text_view"
            app:layout_constraintLeft_toRightOf="@+id/view_text_view"
            android:text="@{String.valueOf(guide.viewCount)}"
            android:hint="15">
        </TextView>

        <TextView
            android:id="@+id/guide2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@+id/title_text_view"
            app:layout_constraintLeft_toRightOf="@+id/view_count_text_view"
            android:text="|">
        </TextView>

        <TextView
            android:id="@+id/like_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@+id/title_text_view"
            app:layout_constraintLeft_toRightOf="@+id/guide2"
            android:text="추천">
        </TextView>

        <TextView
            android:id="@+id/like_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@+id/title_text_view"
            app:layout_constraintLeft_toRightOf="@+id/like_text_view"
            android:text="@{String.valueOf(guide.likeCount)}"
            android:hint="19">
        </TextView>

        <TextView
            android:id="@+id/guide3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@+id/title_text_view"
            app:layout_constraintLeft_toRightOf="@+id/like_count_text_view"
            android:text="|">
        </TextView>

        <TextView
            android:id="@+id/comment_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@+id/title_text_view"
            app:layout_constraintLeft_toRightOf="@+id/guide3"
            android:text="댓글">
        </TextView>

        <TextView
            android:id="@+id/comment_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@+id/title_text_view"
            app:layout_constraintLeft_toRightOf="@+id/comment_text_view"
            android:text="@{String.valueOf(guide.commentCount)}"
            android:hint="19">
        </TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>