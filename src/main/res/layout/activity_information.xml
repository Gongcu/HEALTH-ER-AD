<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/exerciseNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/colorMain"
                android:paddingVertical="5dp"
                android:paddingLeft="16dp"
                android:text="운동명"
                android:textColor="@color/colorWhite"
                android:textSize="15dp"
                android:textStyle="bold"
                app:fontFamily="@font/mapo_peace" />

            <com.health.myapplication.view_pager.MeasuredViewPager
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/colorWhite"></com.health.myapplication.view_pager.MeasuredViewPager>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                app:tabBackground="@drawable/tab_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/colorMain"
                android:paddingVertical="5dp"
                android:paddingLeft="16dp"
                android:text="운동방법"
                android:textColor="@color/colorWhite"
                android:textSize="15dp"
                android:textStyle="bold"
                app:fontFamily="@font/mapo_peace" />

            <TextView
                android:id="@+id/howToTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="5dp"
                android:paddingLeft="16dp"
                android:text="TextView"
                android:textColor="@color/colorMain"
                android:textSize="12dp"
                android:textStyle="bold"
                app:fontFamily="@font/mapo_peace" />

            <TextView
                android:id="@+id/tipTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="8dp"
                android:paddingLeft="16dp"

                android:textColor="@color/colorSub"
                android:textSize="12dp"
                android:textStyle="bold"
                app:fontFamily="@font/mapo_peace" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"></com.google.android.gms.ads.AdView>
</RelativeLayout>
