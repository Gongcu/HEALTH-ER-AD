<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="wrap_content" xmlns:card_cview="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:padding="2dp" android:id="@+id/linearLayout">
    <androidx.cardview.widget.CardView
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:id="@+id/cardview"
            card_cview:cardCornerRadius="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp">
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/linearItem"
                  android:background="@color/colorWhite"
    >
    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/partImageView" android:layout_centerVertical="true"
            android:src="@drawable/one"/>
        <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical">
        <TextView
                android:background="@color/colorWhite"
                android:textColor="@color/colorMain"
                android:text="TextView" android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/partTextView"
                android:textSize="18dp" android:gravity="center_vertical" android:textStyle="bold"
        />
        <LinearLayout
                android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
            <TextView
                    android:background="@color/colorWhite"
                    android:textColor="@color/colorMain"
                    android:text="TextView" android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/setTextView"
                    android:textSize="18dp" android:gravity="center_vertical" android:textStyle="bold"
            />
            <TextView
                    android:background="@color/colorWhite"
                    android:textColor="@color/colorMain"
                    android:text="X"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp" android:gravity="center_vertical" android:textStyle="bold"
            />
            <TextView
                    android:background="@color/colorWhite"
                    android:textColor="@color/colorMain"
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/repTextView"
                    android:textSize="18dp" android:gravity="center_vertical" android:textStyle="bold"
            />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
   </androidx.cardview.widget.CardView>

</LinearLayout>