<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical" android:background="@color/colorWhite" >


    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:background="@color/colorWhite">
        <TextView
            android:layout_marginTop="8dp"
            android:paddingLeft="8dp"
            android:background="@color/colorWhite" android:textStyle="bold"
            android:text="TIP"
            android:textColor="@color/colorSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3" android:textSize="15dp"/>
        <TextView
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorMain"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="운동을 눌러 위, 아래로 순서를 변경하거나 오른쪽으로 스와이프 하여 삭제할 수 있습니다."
            android:textSize="12dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView12"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <CheckBox
            android:layout_marginLeft="16dp"
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="앞으로 알림창 보지 않기"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/quitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:stateListAnimator="@null"
            android:background="@color/colorWhite"
            android:text="닫기"
            android:textColor="@color/colorSub"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>